{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "ESNext", "DOM"],
    "target": "es6",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "typeRoots": ["./src/**/*"]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
